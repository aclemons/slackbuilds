PRGNAM=sqldeveloper
VERSION=${VERSION:-3.0.04.34}
BUILD=${BUILD:-1}
TAG=${TAG:-_acl}
ARCH=${ARCH:-noarch}

CWD=$(pwd)
TMP=${TMP:-/tmp/acl}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

set -e

rm -rf $PKG
mkdir -p $TMP $PKG/opt $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION
unzip $CWD/$PRGNAM-$VERSION-no-jre.zip -d $PKG/opt
cd $PKG
chown -R root:root .
find . \
 \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 \) \
 -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
 -exec chmod 644 {} \;

mkdir -p $PKG/usr/bin

cat << EOF > $PKG/usr/bin/$PRGNAM.sh
#!/bin/sh
/opt/sqldeveloper/sqldeveloper.sh
EOF
chmod 0755 $PKG/usr/bin/* $PKG/opt/sqldeveloper/sqldeveloper.sh

mkdir -p $PKG/usr/share/applications

cat <<"EOF">$PKG/usr/share/applications/$PRGNAM.desktop
[Desktop Entry]
Type=Database;Office;Development
Name=sqldeveloper
Exec=sqldeveloper
Icon=sqldeveloper
Terminal=false
StartupNotify=true
EOF

mkdir -p $PKG/usr/share/icons/hicolor/32x32/apps
ln -sf $PKG/opt/sqldeveloper/icon.png $PKG/usr/share/icons/hicolor/32x32/apps/sqldeveloper.png

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION

cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}
